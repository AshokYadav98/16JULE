package PatternsStudy;

public class Exa18 {

	public static void main(String[] args) 
	{
//		 * *
//		 * * 
//		  *
//		 * *
//		 * *

		
		//row--> 5  star-->2
		
		int star=2;
		int space=0;
		
		for(int i=1;i<=5;i++)
		{
			for(int j=1;j<=star;j++)
			{
				System.out.print("* ");
			}
			System.out.println();
			if(i<3)
			{
				star--;
				if(i==3)
				{
					
					space++;
				}
				else
				{
					space=space;
				}
		
			}
			else
			{
				star=star;
			}
		}

	}

}
